apiVersion: v1
kind: ConfigMap
metadata:
  name: "routing-via-host"
  namespace: "{{ metadata.name }}"
data:
  routing_via_host.yaml: |
    apiVersion: operator.openshift.io/v1
    kind: Network
    metadata:
      name: cluster
    spec:
      defaultNetwork:
        ovnKubernetesConfig:
          gatewayConfig:
            routingViaHost: true
